<div class="container">
  <% @page_title = "収入科目一覧" %>
    <h2><%= @page_title %></h2>
    <%= link_to "収入科目の新規登録", new_income_path %>
    <% if @incomes.present? %>
    <table>
      <thead>
        <tr>
          <th>科目</th>
          <th>詳細</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @incomes.each do |income| %>
        <tr>
          <td><%= income.name %></td>
          <td><%= income.description %></td>
          <td>
            <%= link_to "編集", edit_income_path(income) %>
            <%= link_to "削除", method: :delete, data: { confirm: "本当に削除しますか？"} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <p>登録されている収入科目がありません。</p>
    <% end %>
</div>
